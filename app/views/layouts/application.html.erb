<!DOCTYPE html>
<html>
  <head>
    <title>Review</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to top_path, class: "navbar-brand" do %>
            <strong>
              Review<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </strong>
          <% end %>
        </div>

        <!--例 <li>
          <%= link_to users_show_path(current_user) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"> My Page</span>
          <% end %>
        </li> -->

        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to about_path do %>
                <i class="fa fa-info-circle" aria-hidden="true"></i> 概要
              <% end %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to lessons_path do %>
                  <span class="glyphicon glyphicon-book" aria-hidden="true"> 授業一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <i class="fa fa-users" aria-hidden="true"> 学生一覧</i>
                <% end %>
              </li>
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class="fa fa-user" aria-hidden="true"> マイプロフィール</i>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_registration_path do %>
                  <span class="glyphicon glyphicon-check" aria-hidden="true"> 新規登録</span>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <span class="glyphicon glyphicon-log-in" aria-hidden="true"> ログイン</span>
                <% end %>
              </li>
            <% end %>    
          </ul>
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out" aria-hidden="true"> ログアウト</span>
                <% end %>
              </li>
            </ul>
            <p class="nav navbar-nav navbar-text navbar-right">
              <i class="fa fa-user" aria-hidden="true"></i> <%= current_user.name %>@<%= current_user.username %>としてログイン中
            </p>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>
    <br>
    <br>
    <div class="copy-right text-center">(C) 2017 Taira Kanakubo</div>

  </body>
</html>
